<tr class="text-center">
  <td><%= product.id %></td>
  <td class="admin_product_images">
    <%= image_tag product.image.url.to_s, class: "img-product"%>
  </td>
  <td><%= product.name %></td>
  <td><%= product.quantity_sold %></td>
  <td><%= product.price %></td>
  <td><%= product.status %></td>
  <td><%= product.category_name %></td>
  <td><%= product.category.partner.name %></td>
  <td>
    <%= link_to "", admin_product_status_path(id: product.id, status: :out_of_stock), method: :patch, remote: true, class:"play active" if product.in_stock? %>
    <%= link_to "", admin_product_status_path(id: product.id, status: :in_stock), method: :patch, remote: true, class:"play" if product.out_of_stock? %>
    <hr>
    <%= link_to t('admin.product.disable'), admin_product_status_path(id: product.id, status: :disabled),
                                            method: :patch,
                                            remote: true,
                                            class: "btn btn-secondary glyphicon glyphicon-lock" unless product.disabled? %>
    <%= link_to t('admin.product.enable'), admin_product_status_path(id: product.id, status: :out_of_stock),
                                            method: :patch,
                                            remote: true,
                                            class: "btn btn-primary glyphicon glyphicon-ok" if product.disabled? %>
  </td>
  <td>
    <div class="action-btn">
      <span><%= link_to "", edit_admin_product_path(product),
                            class: "btn btn-success glyphicon glyphicon-edit" %></span>
      <span><%= link_to "", admin_product_path(product),
                            data: { confirm: t('admin.control.confirm_delete') },
                            method: :delete, class: "btn btn-danger glyphicon glyphicon-trash" %></span>
    </div>
  </td>
</tr>
