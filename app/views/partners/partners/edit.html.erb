<%= provide :title, t('admin.product.edit_product') %>
<%= provide :button, t('admin.product.edit_product') %>

<div class="custom-form">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center"><%= t('partner.title_edit') %></h2><br/>
    <%= form_for current_partner, url: partners_partner_path(current_partner) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label t('partner.name') %>
        <%= f.text_field :name, placeholder: t('admin.partner.name'), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t('partner.email') %>
        <%= f.email_field :email, placeholder: t('admin.partner.email'), class: "form-control", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label t('partner.address') %>
        <%= f.text_field :address, placeholder: t('admin.partner.address'), class: "form-control", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label t('partner.phone') %>
        <%= f.text_field :phone_number, placeholder: t('admin.partner.phone_number'), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t('admin.partner.time_open') %>
        <%= f.time_field :time_open, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t('admin.partner.time_close') %>
        <%= f.time_field :time_close, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit t('partner.save'), class: "btn btn-success form-control " %>
      </div>
    <% end %>
  </div>
</div>
<%= link_to t('back'), partners_partner_path , class:'btn btn-secondary glyphicon glyphicon-arrow-left' %>
