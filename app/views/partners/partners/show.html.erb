<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<hr>
<div class="container bootstrap snippet">
  <div class="row">
    <div class="col-sm-10"><h1><%= current_partner.name %></h1><br/><br/></div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="text-center">
        <%= image_tag current_partner.image.url , class: "avatar img-circle img-thumbnail", alt: "avatar"%>
      </div><br/>
    </div>
    <div class="col-sm-9">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home"><%= t('partner.profile') %></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="home">
          <form class="form" action="##" method="post" id="registrationForm">
            <div class="form-group">
              <div class="col-xs-6">
                <label for="first_name"><h4><%= t('partner.name') %></h4></label>
                <p class="form-control"><%= current_partner.name %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="first_name"><h4><%= t('partner.phone') %></h4></label>
                <p class="form-control"><%= current_partner.phone_number %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="first_name"><h4><%= t('partner.email') %></h4></label>
                <p class="form-control"><%= current_partner.email %></p>
              </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                  <label for="first_name"><h4><%= t('partner.address') %></h4></label>
                  <p class="form-control"><%= current_partner.address %></p>
                </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="first_name"><h4><%= t('partner.status') %></h4></label>
                <p class="form-control"><%= current_partner.status %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="email"><h4><%= t('partner.type') %></h4></label>
                <p class="form-control"><%= current_partner.type.name %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="email"><h4><%= t('partner.time_open') %></h4></label>
                <p class="form-control"><%= current_partner.time_open %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <label for="first_name"><h4><%= t('partner.time_close') %></h4></label>
                <p class="form-control"><%= current_partner.time_close %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-12">
                <br>
                <%= link_to t('partner.edit'), edit_partners_partner_path(current_partner),
                                class: "btn btn-lg btn-success glyphicon glyphicon-edit control-custom" %></span>
              </div>
            </div>
          </form>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
