<div class=" border-right sidebar-custom" id="sidebar-wrapper">
  <% if partner_signed_in? %>
    <aside>
      <div class="sidebar ">
        <div class="user-panel">
          <div class="pull-left image">
            <%= link_to "", partners_partners_path %>
            <%= image_tag current_partner.image.url , class: "rounded-circle" %>
          </div>
          <div class="pull-left info">
            <p><%= link_to current_partner.name, partners_partners_path, class: "name-custom" %></p>
            <% if current_partner.open? %>
              <a href="#"><i class="fa fa-circle text-success"></i><%= current_partner.status %></a>
            <% else %>
              <a href="#"><i class="fa fa-circle custom-icon"></i><%= current_partner.status %></a>
            <% end %>
          </div>
        </div>
        <ul class="list-sidebar bg-defoult">
          <li> <a href="#" data-toggle="collapse" data-target="#dashboard" class="collapsed active" >
            <i class="fa fa-th-large"></i> <span class="nav-label"> <%= t('partner.sidebar.dashboard') %> </span> <span class="fa fa-chevron-left pull-right"></span> </a>
            <ul class="sub-menu collapse" id="dashboard">
              <%= link_to t('partner.sidebar.dashboard'), partners_partners_path, class: "name-custom" %>
            </ul>
          </li>
          <li> <a href="#" data-toggle="collapse" data-target="#e-commerce" class="collapsed active" >
            <i class="fa fa-shopping-cart"></i>
            <span class="nav-label"><%= t('partner.sidebar.ecommerce') %></span><span class="fa fa-chevron-left pull-right"></span></a>
            <ul  class="sub-menu collapse" id="e-commerce" >
              <li><%= link_to t('partner.management.product'), partners_products_path %></li>
              <li><%= link_to t('partner.management.category'), partners_categories_path %></li>
              <li><%= link_to t('partner.management.voucher'), partners_vouchers_path %></li>
              <li><%= link_to t('partner.management.order'), partners_orders_path %></li>
            </ul>
          </li>
          <li> <a href="#" data-toggle="collapse" data-target="#tables" class="collapsed active" ><i class="fa fa-table"></i> <span class="nav-label"><%= t('partner.sidebar.statistics') %></span><span class="fa fa-chevron-left pull-right"></span></a>
            <ul  class="sub-menu collapse" id="tables" >
              <li class="active"><%= link_to t('partner.statistics.product'), partners_statistics_products_path %></li>
              <li class="active"><%= link_to t('partner.statistics.revenue'), partners_statistics_revenue_index_path %></li>
            </ul>
          </li>
        </ul>
      </div>
    </aside>
  <% end %>
</div>
<script>
  $(document).ready(function(){
    $('.button-left').click(function(e){
      e.preventDefault();
      $('.sidebar').toggleClass('fliph');
    });
  });
</script>
